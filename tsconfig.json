{
  "compilerOptions": {
      "outDir": "./dist",
      "allowJs": true,
      "target": "es2017",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "alwaysStrict": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "lib": ["es6"]
  },
  "include": [
      "./src/**/*"
  ],
  "exclude": [
      "./src/**/*.spec.ts"
  ]
}